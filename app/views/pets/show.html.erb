<div class="container">
  <div class="show-header">
    <%= link_to pets_path do %>
      <button class="back-to-button mt-5">Back to pet list</button>
    <% end %>
    <h1 class="text-center"> <%=@pet.name%> </h1>
  </div>
  <div class="row">
    <div class="box-container">
      <div class=" col col-md-6">
      <%= cl_image_tag @pet.photo.key, height: 400, width: 500, crop: :fill, radius: 20 %>
      </div>
      <div class="col col-md-6 container-form">
        <h3 class="text-center m-3"> Make a rental request </h3>
        <%= render "shared/form", pet: @pet, rental: @rental %>
      </div>
    </div>
  </div>


  <div class="details-container mt-5 mb-5">
    <div class="details">
      <div class="pet-details">
      <% if @pet.gender == 'F'%>
        <p class="fw-bold fs-4"> <%= @pet.name %> is a(n) <%=@pet.life_stage%> Female <%= @pet.species%>. </p>
      <% else %>
        <p class="fw-bold fs-4"> <%= @pet.name %> is a(n) <%=@pet.life_stage%> Male <%= @pet.species%>. </p>
      <% end %>
      <%= @pet.description %>
      </div>
      <div class="lister-details d-flex">
      <%= cl_image_tag @pet.lister.photo.key, class: "avatar-large"%>
      <div class="lister-info ms-3 pt-2">
        <p class="mb-1">Listed by <%= @pet.lister.first_name %></p>
        <button class="back-to-button">Message this lister</button>
      </div>
      </div>
    </div>
    <div class="price d-flex">
      <p class="size fw-bold"> Size: <%= @pet.size %> <p>
      <p class="fw-bold"> Â¥<%= @pet.price_per_day %> per day </p>
    </div>

  </div>

</div>
