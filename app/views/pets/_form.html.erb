<%= simple_form_for [pet] do |f| %>
  <%= f.input :name %>
  <%= f.input :gender, collection: [ ['female', 'F'], ['male', 'M'] ], include_blank: false %>
  <%= f.input :species %>
  <%= f.input :life_stage, collection: ['Adult', 'Young', 'Elder', 'Baby'], include_blank: false %>
  <%= f.input :size, collection: ['Extra Small', 'Small', 'Medium','Large', 'Extra Large'], include_blank: false %>
  <%= f.input :description %>
  <%= f.input :price_per_day %>
  <%= f.input :photo, as: :file %>

  <%= f.submit "Add a Pet", class: "btn-primary btn-explore" %>

<% end %>
