
<div class="container pets-index-container"> <h2>21 pets near you</h2>
<p></p>

<div class="row justify-content-center">
  <div class="col-sm-8 my-3">
    <%= form_with url: pets_path, method: :get, class: "d-flex" do %>
      <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "Search for a species"
        %>
      <%= submit_tag "Search", name: "", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

  <div class="bg-pawsitive-orange pet-cards"><% @pets.each do |pet| %>

    <%= link_to pet_path(pet) do %>
      <div class="pet-cards-container">
        <div class="card-category" style="background-image: url('<%= cl_image_path pet.photo.key %>');">
        </div>
        <div class="card-pet-infos d-flex">
          <div class="card-pet-desc">
            <h2><%= pet.name %></h2>
            <p><%= pet.life_stage %> <%= pet.species %></p>
          </div>
        <p class="card-pet-pricing">Â¥<%= pet.price_per_day %> per day</p>
        <%= cl_image_tag pet.lister.photo.key, class: "card-pet-user avatar-bordered"%>
        </div>
      </div>
    <% end %>
  <% end %>
  </div>
</div>
